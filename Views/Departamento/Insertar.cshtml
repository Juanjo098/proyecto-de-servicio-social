<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Crear Nuevo Departamento</h4>
                </div>
                <div class="card-body">
                    <form id="form" asp-action="Insertar">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <span class="text-danger">@ViewBag.error</span>
                        </div>
                        <div class="form-group">
                            <label asp-for="JefeDpto" class="form-label">Jefe de Departamento</label>
                            <input asp-for="JefeDpto" list="docentes" class="form-control" />
                            <datalist id="docentes">
                                @foreach (var docente in docentes)
                                {
                                    <option value="@docente"></option>
                                }
                            </datalist>
                            <span asp-validation-for="JefeDpto" class="text-danger"></span>
                            <span class="text-danger">@ViewBag.errorDocente</span>
                        </div>
                        <div class="form-group text-center">
                            <input type="button" value="Crear Nuevo" onclick="handleClick()" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Departamentos" class="btn btn-secondary">Back to List</a>
    </div>
</div>


<script>
    const handleClick = () => {
        form = getForm()
        confirmar("Desea insertar un nuevo departamento?", "Esta apunto insertar un nuevo departamento", "Insertar", "Insertado", form)
    }
</script>

