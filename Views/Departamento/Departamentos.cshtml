@model IEnumerable<Titulacion.Clases.Get.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<h1>Departamentos</h1>

<p>
    <a asp-controller="Departamento" asp-action="Insertar" class="btn btn-success">Crear nuevo departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                <a asp-controller="Departamento" asp-action="Editar" class="btn btn-warning" asp-route-idDpto=@item.id><i class="fa-solid fa-pen-to-square"></i></a>
                <a asp-controller="Departamento" asp-action="Eliminar" class="btn btn-danger" asp-route-idDpto=@item.id><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
