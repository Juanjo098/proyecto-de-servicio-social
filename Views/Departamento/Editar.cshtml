@model Titulacion.Clases.Put.Departamento

@{
    ViewData["Title"] = "Editar";
    List<string> docentes = ViewBag.docentes;
}

<h1>Editar</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">@Html.DisplayNameFor(model => model.Id): @Model.Id</label>
                <input asp-for="Id" class="form-control" type="hidden"/>
                <span asp-validation-for="Id" class="text-danger">@ViewBag.errorID</span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger">@ViewBag.errorNombreDpto</span>
            </div>
            <div class="form-group">
                <label asp-for="JefeDpto" class="control-label"></label>
                <input asp-for="JefeDpto" list="docentes" class="form-control" />
                <datalist id="docentes">
                    @foreach (var docente in docentes)
                    {
                        <option value=@docente></option>
                    }
                </datalist>
                <span asp-validation-for="JefeDpto" class="text-danger">@ViewBag.errorDocente</span>
            </div>
            <div class="form-group">
                <input type="button" value="Save" onclick="handleClick()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Departamentos">Back to List</a>
</div>

<script>
    const handleClick = () => {
        form = getForm()
        confirmar("Desea editar la información del departamento?", "Esta apunto de editar la información del departamento", "Editar", "Editado", form)
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
