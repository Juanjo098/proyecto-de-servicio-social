<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Carrera</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" id="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="IdCarrera" class="form-label">ID Carrera: @Model.IdCarrera</label>
                            <input asp-for="IdCarrera" class="form-control" type="hidden" />
                            <span asp-validation-for="IdCarrera" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <span class="text-danger">@ViewBag.errorCarrera</span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdDpto" class="form-label">Departamento</label>
                            <select asp-for="IdDpto" asp-items="@departamentos" class="form-control"></select>
                            <span asp-validation-for="IdDpto" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="button" onclick="handleClick()" value="Guardar" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Carreras" class="btn btn-secondary">Volver</a>
    </div>
</div>


<script>
    const handleClick = () => {
        form = getForm()
        confirmar("Desea editar la información de la carrera?", "Esta apunto editar la información de una carrera", "Editar", "Editado", form)
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
