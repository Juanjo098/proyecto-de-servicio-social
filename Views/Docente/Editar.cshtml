<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Docente</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" id="form" method="post">
                        <div class="form-group">
                            <label asp-for="Id_Docente" class="form-label">ID Docente: @Model.Id_Docente</label>
                            <input asp-for="Id_Docente" class="form-control" type="hidden" value="@Model.Id_Docente" />
                            <span asp-validation-for="Id_Docente" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Id_Dpto" class="form-label">Departamento</label>
                            <select asp-items="@departamentos" asp-for="Id_Dpto" class="form-control"></select>
                            <span asp-validation-for="Id_Dpto" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" value="@Model.Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Titulo" class="form-label">Título</label>
                            <input asp-for="Titulo" class="form-control" value="@Model.Titulo" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
