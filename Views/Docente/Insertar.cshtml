<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Crear Nuevo Docente</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Insertar">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id_Dpto" class="form-label">Departamento</label>
                            <select asp-items="@departamentos" asp-for="Id_Dpto" class="form-control"></select>
                            <span asp-validation-for="Id_Dpto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" value="@ViewBag.nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Titulo" class="form-label">Título</label>
                            <input asp-for="Titulo" class="form-control" value="@ViewBag.titulo" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Diminutivo" class="form-label">Diminutivo</label>
                            <input asp-for="Diminutivo" class="form-control" value="@ViewBag.diminutivo" />
                            <span asp-validation-for="Diminutivo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cedula" class="form-label">Cédula</label>
                            <input asp-for="Cedula" class="form-control" value="@ViewBag.cedula" />
                            @if (ViewBag.error != null)
                            {
                                <span asp-validation-for="Cedula" class="text-danger">La cédula está duplicada</span>
                            }
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Docentes" class="btn btn-secondary">Back to List</a>
    </div>
</div>

