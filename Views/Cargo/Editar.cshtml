<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Cargo</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" id="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="form-label">@Html.DisplayNameFor(model => model.Id): @Model.Id</label>
                            <input asp-for="Id" type="hidden" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="button" onclick="handleClick()" value="Save" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Cargos" class="btn btn-secondary">Volver</a>
    </div>
</div>


<script>
    const handleClick = () => {
        form = getForm()
        confirmar("Desea editar la información del cargo?", "Esta apunto de editar la información del cargo", "Editar", "Editado", form)
    }
</script>

