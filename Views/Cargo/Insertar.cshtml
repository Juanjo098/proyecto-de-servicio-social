@model Titulacion.Clases.Post.Cargo

@{
    ViewData["Title"] = "Insertar";
}

<h1>Insertar</h1>

<h4>Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Insertar" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" onclick="handleClick()" value="Insertar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Cargos">Volver</a>
</div>

<script>
    const handleClick = () => {
        form = getForm()
        confirmar("Desea insertar un nuevo cargo?", "Esta apunto insertar un nuevo cargo", "Insertar", "Insertado", form)
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
